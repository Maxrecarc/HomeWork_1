<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="270" Width="383">
    <Grid Margin="0,0,0,-6">
        <TextBox x:Name="tb_textInput" HorizontalAlignment="Left" Margin="23,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btn_sendMessage" Content="Button" HorizontalAlignment="Left" Margin="23,23,0,0" VerticalAlignment="Top" Click="btn_sendMessage_Click"/>
        <ListView x:Name="lv_reseivedMessages" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="237,10,10,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
